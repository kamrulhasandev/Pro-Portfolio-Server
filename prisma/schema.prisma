generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Skill {
  id        String        @id @default(uuid())
  name      String
  icon      String
  category  SkillCategory
  level     SkillLevel
  creaedAt  DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@map("skills")
}

model Experience {
  id              String      @id @default(uuid())
  companyName     String
  companyLocation String
  designation     String
  jobType         JobType
  jobLocation     JobLocation
  startDate       DateTime
  endDate         DateTime?
  description     String
  achievements    String
  isCurrent       Boolean     @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("experiences")
}

enum SkillCategory {
  FRONTEND
  BACKEND
  DATABASE
  OTHER
}

enum JobType {
  FULLTIME
  PARTTIME
  CONTRACT
}

enum JobLocation {
  ON_SITE
  REMOTE
  HYBRID
}

enum SkillLevel {
  BASIC
  INTERMEDIATE
  ADVANCED
  EXPERT
}
